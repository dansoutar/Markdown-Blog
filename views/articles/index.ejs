<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

    <!-- css -->
    <!-- <link rel="stylesheet" href="../css/style.css">z -->

    <!-- fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;700&display=swap" rel="stylesheet">

    <title>Blog</title>
</head>
<body>

    <div class="container">
        <h2>Articles</h2>
        <a href="articles/new" class='btn btn-success btn-sm'>New Article</a>

            <% articles.forEach(article => { %>
                
            <div class="article">
                <div class="card mt-4">
                    <div class="card-body">
                        <h4 class="card-title"><%= article.title %></h4>
                        <div class="card-subtitle text-muted mb-2">
                            <%= article.createdAt.toLocaleDateString() %>
                        </div>
                        <div class="card-text mb-2">
                            <%= article.description %>
                        </div>
                        <a href="/articles/<%= article.slug %>" class='btn btn-primary'>Read More</a>
                        <a href="/articles/<%= article.slug %>" class='btn btn-info'>Edit</a>
                        
                        <form class='d-inline' action="/articles/<%= article.id %>?_method=DELETE" method='POST'>
                            <button type='submit' class='btn btn-danger'>Delete</button>
                        </form>
                    </div>
                </div>
            </div>

            <%  }); %>

    </div>
    
</body>
</html>